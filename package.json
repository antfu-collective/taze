{
  "name": "taze",
  "description": "A modern cli tool that keeps your deps fresh",
  "version": "0.4.5",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "cross-env DEBUG=taze:* esno ./src/cli.ts",
    "build": "rimraf dist && tsup ./src/index.ts ./src/cli.ts --dts --format esm,cjs",
    "release": "pnpx bumpp --commit --tag && pnpm build && esno ./scripts/prepublish.ts && pnpm publish --no-git-checks && esno ./scripts/postpublish.ts && git push",
    "test": "ava"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "taze": "bin/taze.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/taze.git"
  },
  "bugs": {
    "url": "https://github.com/antfu/taze/issues"
  },
  "homepage": "https://github.com/antfu/taze#readme",
  "funding": "https://github.com/sponsors/antfu",
  "dependencies": {
    "@antfu/ni": "^0.12.0",
    "@typescript-eslint/parser": "5.10.0",
    "chalk": "^5.0.0",
    "cli-progress": "^3.10.0",
    "debug": "^4.3.3",
    "deepmerge": "^4.2.2",
    "execa": "^6.0.0",
    "fast-glob": "^3.2.11",
    "find-up": "^6.2.0",
    "libnpmconfig": "^1.2.1",
    "pacote": "^12.0.2",
    "rollup": "2.64.0",
    "semver": "^7.3.5",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/cli-progress": "^3.9.2",
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.10",
    "@types/pacote": "^11.1.3",
    "@types/semver": "^7.3.9",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "ava": "^4.0.1",
    "bumpp": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "esm": "^3.2.25",
    "esno": "^0.14.0",
    "rimraf": "^3.0.2",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "esbuild-register"
    ]
  }
}
