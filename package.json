{
  "name": "taze",
  "version": "0.3.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "typing": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "esno ./src/cli.ts",
    "build": "tsup ./src/index.ts ./src/cli.ts --dts --format esm,cjs --legacy-output",
    "release": "pnpx bumpp --commit --tag && pnpm build && esno ./scripts/prepublish.ts && pnpm publish --no-git-checks && esno ./scripts/postpublish.ts && git push",
    "test": "ava"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "taze": "bin/taze.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/taze.git"
  },
  "bugs": {
    "url": "https://github.com/antfu/taze/issues"
  },
  "homepage": "https://github.com/antfu/taze#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "cli-progress": "^3.8.2",
    "fast-glob": "^3.2.4",
    "libnpmconfig": "^1.2.1",
    "pacote": "^11.1.11",
    "semver": "^7.3.2",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.3.3",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/cli-progress": "^3.8.0",
    "@types/node": "^14.6.4",
    "@types/pacote": "^11.1.0",
    "@types/semver": "^7.3.3",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "ava": "^3.12.1",
    "eslint": "^7.8.1",
    "esm": "^3.2.25",
    "esno": "^0.2.0",
    "tsup": "^3.6.1",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-ts"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "esbuild-register"
    ]
  }
}
